<header><h4 class="display-4">Locations</h4></header>

<%= link_to 'Add location', new_event_location_path, class: 'btn btn-primary btn-lg' %>

<div class="card">
  <div class="container">

		<table class="centered highlighted">
  			<thead>
    <tr>
      <th>Title</th>
      <th>Access Code</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.title, event_location_path(id: location.id ) %></td>
        <td><%= location.access_code %></td>
        <td><%= location.address%></td>
        <td><%= location.latitude %></td>
        <td><%= location.longitude %></td>
        <td><%= location.event.title %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  </div>
</div>
