<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
      <tr>
        <th>Name</th>
        <th>Unit Amount</th>
        <th>UPC</th>
        <th>Description</th>
      </tr>
    </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, account_product_path(id: product.id ) %></td>
        <td><%= product.unit %></td>
        <td><%= product.upc %></td>
        <td><%= product.description%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_account_product_path %>
