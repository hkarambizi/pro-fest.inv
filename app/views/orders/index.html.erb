
<%# <%= link_to "New Order", new_event_location_order_path , class: 'btn btn-primary btn-lg' %> %>


<div class ='orders-wrapper'>
  <table class = 'centered'>
    <thead>
      <tr>
        <th>ID</th>
        <th>Message</th>
        <th colspan="3">Progress</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order|  %>
        <tr>
          <td><%= link_to order.id, event_location_order_path(order.id) %></td>
          <td><%=order.message%></td>
          <td><%=render 'progressbar', order: order%></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>

<a class="waves-effect waves-light btn sideLinks orders" href="#modal1">Orders</a>

<script>
$(document).ready(function() {
 document.querySelector('.waves-effect waves-light btn sideLinks orders').click();
});
</script>
