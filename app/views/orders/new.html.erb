<h1>Create New Order</h1>


<%= form_for :order, url: event_location_orders_path do |f| %>
<div>
  <div class="input-field">
    <%= f.label :content %>
    <br>
    <%= f.text_field :content %>
    <br>
  </div>

  <div class="field">
    <%= f.label :delivery_date %>
    <%= f.text_field :delivery_date, class: "datepicker"%>
  </div>



  <button class='btn' action='<%= f.submit  %>'>Create Order
  </button>
  <% end %>
</div>
