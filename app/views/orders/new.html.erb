<h1>Create New Order</h1>


<%= form_for [@location,@order], url: new_location_order_path do |f| %>
<div>
  <div class="form_row">
      <%= f.label :role %>
      <%= f.select(:role, options_for_select(order_types), :required => true) %>
  </div>

<div class="form_row">
  <%= f.label :message %>
  <%= f.text_field :message %>
  </div>

</div>






  <button class='btn' action='<%= f.submit  %>'>Create Order
  </button>
  <% end %>
</div>

<script>
$(document).ready(function() {
 $('select').formSelect();
});
</script>
