<h1>Create New Order</h1>


<%= form_for :order, url: event_location_orders_path do |f| %>
<div>
  <div class="form_row">
      <%= f.label :role %>
      <%= f.select(:role, options_for_select(order_types), :required => true) %>
  </div>

  <div class="input-field">
    <%= f.label :content %>
    <br>
    <%= f.text_field :content %>
    <br>
  </div>





  <button class='btn' action='<%= f.submit  %>'>Create Order
  </button>
  <% end %>
</div>

