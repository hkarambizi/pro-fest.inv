
<% @orders.each do |order|  %>
    <%= link_to event_location_order_path(@location.event_id, @location.id, order.id) do %>
<div class="order">
<%=render 'progressbar', order: order %>
    <div class="header">
         <% order.transactions.each do |t| %>
            <img src="<%= t.item.product.image_url %>" class="right">
        <% end %>
      <span class="order-id"> <%= order.id %> </span>
    <span class="header status order-status <%= order.status ? order.status : "new" %>"><%= order.status ? order.status : "new" %></span>
      </div>
      <div class="card-footer">

        <p class="header">Memo:</p>
        <p class="header"> <%= order.message %></p>
        </div>
</div>
    <% end %>
<% end %>


<style>
.header {
  padding: 1em;
  font-weight: bold;
}
.badge {
  background-color: blue;
  color: white;
  box-shadow: 0.1em 0.1em 3px gray;
}
.card-footer {
  background-color: white;
  display: inline-block;
  width: 100%;
  height: 30%;
}
.right {
    float: right;
    height: 4em;
    width: 4em;
    vertical-align: middle;
    border-radius: 50%;
    box-shadow: 0.1em 0.1em 3px gray;
}
.order {
  min-height: 30%;
  margin: 2em;
  box-sizing: border-box;
  box-shadow: 0.1em 0.1em 0.5em black;
  color: black;
}
.order:hover {
  background-color: gray;
}
.order-id {
    text-shadow: 1px 1px 1px gray;
    border-radius: 100%;
    color: black;
    font-size: 3em;
    font-weight: bold;
    height: 5em;
    padding: .5em;
}
.orders-list {
  display: flex;
  flex-flow: column nowrap;
  justify-content: start;
  width: 100%;
  height: 80vh;
  background-color: #f5d1b2;
  overflow: scroll;
}
.order-status {
    font-size: 1em;
}
.content {
  width: 60%;
  background-color: #39edc0;
  margin: 0 auto;
  height: 100vh;
}
</style>
