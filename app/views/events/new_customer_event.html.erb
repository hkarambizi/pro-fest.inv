  $('.datepicker-start-date').pickadate({
selectMonths: true, // Creates a dropdown to control month
selectYears: 15,
closeOnSelect: true  // Creates a dropdown of 15 years to control year
});
 $('.datepicker-end-date').pickadate({
selectMonths: true, // Creates a dropdown to control month
selectYears: 15,
closeOnSelect: true  // Creates a dropdown of 15 years to control year
});
</script>
