<p id="notice"><%= notice %></p>

<h1>Events</h1>

<%= month_calendar(attribute: :start_date, end_attribute: :end_date) do |date| %>
  <%= date %>
<% end %>

<%= link_to 'Add New Event', new_client_event_path(client_id: @client.id), class: 'btn btn-primary btn-lg' %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Admin</th>
      <th>Prev year event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= event.address %></td>
        <td><%= event.latitude %></td>
        <td><%= event.longitude %></td>
        <td><%= event.admin_id %></td>
        <td><%= event.prev_year_event_id %></td>
        <td><%= link_to 'Show', client_event_path(client_id: event.client_id, id: event.id), data: {target: "#modal2"} %></td>
        <td><%= link_to 'Edit', edit_event_path(event.id) %></td>
        <td><%= link_to 'Destroy', event_path(event.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>

<a class="waves-effect waves-light btn sideLinks orders" href="#modal1">Orders</a>

