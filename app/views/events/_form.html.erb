<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="field">
    <%= f.label :customer_id %><br />
    <%= f.select :customer_id, options_for_select(Customer.all.map{|customer|[customer.name, customer.id]}), :class => 'input-field' %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
  </div>

  <div class="field">
    <%= f.label :end_date %>
    <%= f.date_field :end_date%>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_area :address %>
  </div>

  <div class="field">
    <%= f.label :photo_url %>
    <%= f.file_field :photo_url, accept: 'image/png,image/gif,image/jpeg,image/jpg'%>
  </div>

  <div class="field">
    <%= f.label :admin_id, "Owner" %><br />
    <%= f.select :admin_id, options_for_select(User.all.map{|user|[user.first_name, user.id]}), :class => 'input-field' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
